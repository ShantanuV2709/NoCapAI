{
    "manifest_version": 3,
    "name": "NoCap AI - Fake News Detector",
    "version": "1.0",
    "description": "Verify selected text instantly using NoCap AI.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:8000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icon16.png",
                "icon48.png",
                "icon128.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}